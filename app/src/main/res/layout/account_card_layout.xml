<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amt_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/accNameTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="190dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:layout_marginRight="190dp"
            android:typeface="monospace"
            android:textColorHighlight="#ff2493ff" />

        <View
            android:id="@+id/accCardDivider"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/accNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Balance Amount"
            android:id="@+id/accBalTextView"
            android:textSize="25dp"
            android:typeface="monospace"

            android:layout_below="@+id/accCardDivider"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/accAmountTextView"
            android:textSize="25dp"
            android:typeface="monospace"

            android:layout_below="@+id/accCardDivider"
            android:layout_toRightOf="@+id/accBalTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="209dp"
            android:layout_marginStart="209dp"
            android:textColor="#ff4adf58" />
    </RelativeLayout>

   

</android.support.v7.widget.CardView>