<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="siolabs.osahub.Activity.AddNewTransactionActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:layout_alignParentRight="true"
            android:id="@+id/toggleBtn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Expense / Income"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/toggleBtn"
            android:layout_alignParentLeft="true"
            android:id="@+id/labelToggleBtn" />
    </RelativeLayout>
    
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <Spinner
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/accountSpinner"
           android:layout_alignParentRight="true"
           android:entries="@array/spinnerItems"
           />

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="From Account"
           android:layout_alignParentLeft="true"
           android:layout_toLeftOf="@+id/accountSpinner"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:id="@+id/labelAccount"
           />
       
       </RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="01/01/2012"
           android:layout_toLeftOf="@+id/datePickerBtn"
           android:layout_centerVertical="true"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:id="@+id/chosenDateTextView"
           />
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:id="@+id/datePickerBtn"
           android:src="@drawable/icon_datepicker" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Date123"
           android:layout_centerVertical="true"
           android:layout_alignParentLeft="true"
           android:layout_toLeftOf="@+id/chosenDateTextView"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:id="@+id/labelDatePicker"
           />
       
       
       
       
       </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:entries="@array/spinnerItems"
            android:id="@+id/catSpinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Category"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/catSpinner"
            android:id="@+id/textView" />

   
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount"
            android:id="@+id/labelAmountEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:id="@+id/amountEditText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentLeft="true"
            android:id="@+id/cancelAddTransBtn" />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_alignParentRight="true"
            android:id="@+id/doneAddNewTransBtn" />

        
    </RelativeLayout>


</LinearLayout>
